{
	// https://containers.dev/implementors/json_reference/
	"name": "Admiral R (RStudio) container",
	"image": "ghcr.io/pharmaverse/admiralci-4.1:latest",
	// Install Dev Container Features. More info: https://containers.dev/features
	"features": {
		"ghcr.io/rocker-org/devcontainer-features/r-rig:1": {
			"version": "none",
			"vscodeRSupport": "full",
			"installRadian": true,
			"installVscDebugger": true
		},
		"ghcr.io/rocker-org/devcontainer-features/renv-cache:latest": {}
	},
	"remoteEnv": {
        "PKG_SYSREQS": "true"
    }, // debug 4.1 PAK errors..
	"postCreateCommand": "R -q -e 'renv::activate(profile = \"4.1\"); renv::restore()'",

	"customizations": {
		"vscode": {
			"settings": {
				"r.rterm.linux": "/usr/local/bin/radian",
				"r.bracketedPaste": true
			},
			"extensions": [
				"vsls-contrib.codetour",
				"GitHub.copilot",
				// R extensions
				"ikuyadeu.r",
				"REditorSupport.r-lsp",
				// Extra extension
				"coenraads.bracket-pair-colorizer-2",
				"streetsidesoftware.code-spell-checker",
				"eamodio.gitlens"
			]
		}
	},

	// RStudio ports
	"forwardPorts": [8787],
	"portsAttributes": {
		"8787": {
			"label": "Rstudio",
			"requireLocalPort": true,
			"onAutoForward": "ignore"
		}
	},
	// install staged deps - note that It will execute at least once, but cloud services will also periodically execute the command to refresh cached or prebuilt containers
	"updateContentCommand": "Rscript -e \"git2r::config(git2r::repository('.'), user.name = 'pharmaverse-bot', user.email = '113703390+pharmaverse-bot@users.noreply.github.com');staged.dependencies::install_deps(staged.dependencies::dependency_table(project = '.', verbose = 1), verbose = 1)\"",
	// Use 'postAttachCommand' to run commands after the container is started.
	"postAttachCommand": "sudo rstudio-server start" // TODO: add installation of admiraldev and admiral.test deps?

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root
	// "remoteUser": "root"
}